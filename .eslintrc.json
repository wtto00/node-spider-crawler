{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:jest/recommended",
    "airbnb-typescript/base",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2015,
    "sourceType": "module",
    "tsconfigRootDir": "./",
    "project": ["./tsconfig.eslint.json"]
  },
  "plugins": ["import", "@typescript-eslint"],
  "rules": {
    "max-len": ["error", { "code": 120 }]
  }
}
