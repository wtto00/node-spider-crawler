{
  "name": "@wtto00/spider-crawler",
  "version": "0.1.1-beta",
  "description": "定义一个json格式的爬虫规则，Nodejs按照该规则爬取所需要的内容",
  "type": "module",
  "main": "dist/lib/index.js",
  "types": "dist/types/index.d.ts",
  "module": "dist/es/index.js",
  "exports": {
    ".": {
      "require": "./dist/lib/index.js",
      "import": "./dist/es/index.js"
    }
  },
  "files": [
    "dist/es",
    "dist/lib",
    "dist/types"
  ],
  "scripts": {
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "build": "rm -rf dist && (npm run build:cjs & npm run build:esm)",
    "build:cjs": "tsc --project tsconfig.cjs.json",
    "build:esm": "tsc",
    "format": "prettier --write .",
    "lint": "eslint --color --fix --ignore-path .gitignore .",
    "prepare": "husky install && husky set .husky/pre-commit \"npx lint-staged\""
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/wtto00/spider-crawler.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "keywords": [
    "node",
    "spider",
    "crawler"
  ],
  "author": "tato.wang <wtto00@outlook.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wtto00/spider-crawler/issues"
  },
  "homepage": "https://github.com/wtto00/spider-crawler#readme",
  "dependencies": {
    "cheerio": "1.0.0-rc.12",
    "node-fetch": "^3.2.10"
  },
  "devDependencies": {
    "@types/jest": "^28.1.6",
    "@types/node": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "eslint": "^8.20.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.6.0",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --color --fix"
    ],
    "*.{ts,tsx}": [
      "tsc --noEmit --pretty"
    ]
  }
}
